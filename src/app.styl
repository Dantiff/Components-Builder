@import './../node_modules/vuetify/src/stylus/main'

@require './modules/auth'
@require './modules/account'
@require './modules/shared'
@require './modules/charts'
@require './modules/maps'


// CSS Variables
app-green-4 = #1b5e20
app-green-3 = #2e7d32
app-green-2 = #388e3c
app-green-1 = #43a047
app-green = #4caf50

html
	overflow scroll
	font-size 10px
	h3
		margin-top 0
	.page.secSpace20 .dRow .dCol .section
		padding-top 0
	h4
		margin-top 0
		margin-bottom .5rem
		font-size 1.8rem

body
	background #f3f3f3
	a
		color app-green-4 !important
		li
			.icon
				color app-green-4 !important
			.list__tile__title
				color app-green-4 !important
		&:hover
			color app-green-1 !important
			li
				.icon
					color app-green-1 !important
				.list__tile__title
					color app-green-1 !important
			text-decoration none
		&:focus
			text-decoration none
		&:visited
			text-decoration none
			color app-green-3 !important
			li
				.icon
					color app-green-3 !important
				.list__tile__title
					color app-green-3 !important